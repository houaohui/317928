#include<reg52.h>
#define uchar unsigned char
sbit P20=P2^0;
sbit P21=P2^1;
sbit P22=P2^2;
sbit enled=P1^1;
unsigned char code ledchar[]=
{0xc0,0xf9,0xa4,0xb0,0x99,0x92,0x82,0xf8,0x80,0x90,0x88,0x83,0xc6,0xa1,0x86,0x8e};
void main()
{
	uchar cnt=0;
	uchar sec=0;
	enled=0;
	P20=0;
	P21=0;
	P22=0;
	TMOD=0X01;
	TH0=0x2f;
	TL0=0Xab;
	TR0=1;
	
	while(1)
	{
		if(TF0==1)
		{
			TF0=0;
			TH0=0X2f;
			TL0=0Xab;
			cnt++;
			if(cnt>=50)
			{
				cnt=0;
				P0=ledchar[sec];
				sec++;
				if(sec>=16)sec=0;
					
			}
		}
		
	}
}
